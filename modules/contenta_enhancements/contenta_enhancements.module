  }

  if ($current_user->hasPermission('access site reports')) {
    $menu_tree_contenta = \Drupal::service('toolbar.menu_tree');
    $parameters = new MenuTreeParameters();
    $parameters->setMinDepth(1)->setMaxDepth(3)->onlyEnabledLinks();
