        '#url' => Url::fromRoute('system.admin_reports'),
        '#attributes' => [
          'title' => t('Reports'),
          'class' => [
            'toolbar-icon',
            'toolbar-icon-system-admin-reports',
          ],
        ],
      ],
      'tray' => [
        '#heading' => t('Reports'),
        '#wrapper_attributes' => [],
        'menu' => $renderable_reports,
      ],
      '#weight' => -5,
    ];
  }
  else {
    $items['reports'] = $empty_item_cacheability;
  }

  if ($current_user->isAnonymous()) {
    $items['login'] = [
      '#type' => 'toolbar_item',
      'tab' => [
        '#type' => 'link',
        '#options' => [
          'set_active_class' => TRUE,
